<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/relative_juice"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp">
        <TextView
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:text="@string/WeekEnding"
            android:gravity="center"
            android:textSize="17dp"
            android:id="@+id/weekendingjuice"
            android:textColor="#000"
            android:background="@drawable/weather_textview_top_background"/>
        <TextView
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:text="@string/Week"
            android:gravity="center"
            android:textSize="17dp"
            android:id="@+id/weekjuice"
            android:layout_toRightOf="@+id/weekendingjuice"
            android:textColor="#000"
            android:background="@drawable/weather_textview_top_background"/>
        <TextView
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:text="@string/Accum"
            android:gravity="center"
            android:textSize="17dp"
            android:id="@+id/accumjuice"
            android:layout_toRightOf="@+id/weekjuice"
            android:textColor="#000"
            android:background="@drawable/weather_textview_top_background"/>
    </RelativeLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listViewExchange"
        android:layout_below="@+id/relative_juice"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"></ListView>
</RelativeLayout>