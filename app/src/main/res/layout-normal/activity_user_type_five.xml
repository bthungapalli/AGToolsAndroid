<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorAccent"
        android:id="@+id/layout">

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/user5"
            android:background="@drawable/ic_arrow_back_black_24dp">
        </Button>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtTags"
            android:textColor="#fff"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginLeft="100dp"
            android:text="@string/usertype" >
        </TextView>
    </LinearLayout>

    <ScrollView
        android:orientation="vertical"
        android:padding="10dip"
        android:layout_below="@+id/layout"
        android:layout_width="fill_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:padding="10dip"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:text="@string/usertype"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_marginBottom="5dp"/>

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_spinner_background"
                android:spinnerMode="dropdown"

                />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:text="@string/selecttype"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_marginBottom="5dp"/>

            <Spinner
                android:id="@+id/type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_spinner_background"
                android:spinnerMode="dropdown"

                />


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:text="@string/SelectCommodity"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_marginBottom="5dp"/>

            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                android:id="@+id/fruititem1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                style="@style/ThemeSpinner"
                android:textColor="@color/colorPrimary"
                android:theme="@style/ThemeSpinner"
                android:background="@drawable/spinner_bgg"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:text="@string/selecttype"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_marginBottom="5dp"/>

            <Spinner
                android:id="@+id/type2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_spinner_background"
                android:spinnerMode="dropdown"

                />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:text="@string/SelectCommodity"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_marginBottom="5dp"/>

            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                android:id="@+id/fruititem2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                style="@style/ThemeSpinner"
                android:textColor="@color/colorPrimary"
                android:theme="@style/ThemeSpinner"
                android:background="@drawable/spinner_bgg"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:textStyle="bold"
                android:textColor="#000"
                android:text="@string/selecttype"
                android:layout_marginBottom="5dp"/>

            <Spinner
                android:id="@+id/type3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_spinner_background"
                android:spinnerMode="dropdown"

                />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:text="@string/SelectCommodity"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_marginBottom="5dp"/>

            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                android:id="@+id/fruititem3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                style="@style/ThemeSpinner"
                android:textColor="@color/colorPrimary"
                android:theme="@style/ThemeSpinner"
                android:background="@drawable/spinner_bgg"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:text="@string/selecttype"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_marginBottom="5dp"/>

            <Spinner
                android:id="@+id/type4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_spinner_background"
                android:spinnerMode="dropdown"

                />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:textStyle="bold"
                android:textColor="#000"
                android:text="@string/SelectCommodity"
                android:layout_marginBottom="5dp"/>

            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                android:id="@+id/fruititem4"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                style="@style/ThemeSpinner"
                android:textColor="@color/colorPrimary"
                android:theme="@style/ThemeSpinner"
                android:background="@drawable/spinner_bgg"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:text="@string/selecttype"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_marginBottom="5dp"/>

            <Spinner
                android:id="@+id/type5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_spinner_background"
                android:spinnerMode="dropdown"

                />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:text="@string/SelectCommodity"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_marginBottom="5dp"/>

            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                android:id="@+id/fruititem5"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                style="@style/ThemeSpinner"
                android:textColor="@color/colorPrimary"
                android:theme="@style/ThemeSpinner"
                android:background="@drawable/spinner_bgg"
                android:layout_marginTop="10dp"
                />
            <Button
                android:id="@+id/next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/next"
                android:textColor="#fff"
                android:padding="10dp"
                android:background="@color/colorAccent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="100dp"
                android:textAllCaps="false"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>