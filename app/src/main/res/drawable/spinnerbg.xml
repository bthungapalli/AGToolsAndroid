<?xml version="1.0"
    encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape>
                    <gradient android:angle="90"
                        android:type="linear" />
                    <corners android:radius="1dp" />

                    <padding android:bottom="0dp"
                        android:left="0dp"
                        android:right="0dp"
                        android:top="0dp" />
                </shape>
            </item>
            <item>
                <bitmap android:gravity="bottom|right"
                    android:src="@drawable/spinnerdown" />
                // you can use any other image here, instead of default_holo_dark_am
            </item>
        </layer-list>
    </item>
</selector>