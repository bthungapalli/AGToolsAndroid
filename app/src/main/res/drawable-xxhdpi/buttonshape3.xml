<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
     <item android:state_pressed="true">
          <shape>
         <solid
                android:color="#b42058" />
              <stroke
                  android:width="0.5dip"
                  android:color="#6b6b6b" />
            <padding
               
                android:top="1dp"
                android:left="10dp"
                android:right="10dp"
                android:bottom="10dp" />
         </shape> <!--btn pressed --> 
</item>
    <item  android:state_pressed="false">
        <shape>
            <solid
                android:color="#E3E3E3" />
            <stroke
                android:width="0.5dip"
                android:color="#6b6b6b" />
            <padding
               
                android:top="1dp"
                android:left="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
  
</selector>